package exceptiondome;

public class TryCatchTest {
	/**
	 * Test1()：抛出DrunkException异常
	 * Test2()：调用Test1(),捕获DrunkException异常，并包装成运行时异常，继续抛出
	 * main()方法中，调用Test2()，尝试捕获Test2()方法抛出的异常
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		TryCatchTest tct=new TryCatchTest();
		try {
			tct.Test2();
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
		}
		
	}
	public void Test1() throws DrunkException{
		throw new DrunkException("喝酒别开车");
	}
	public void Test2(){
		try {
			Test1();
		} catch (DrunkException e) {
			// TODO: handle exception
			RuntimeException newExc=new RuntimeException("司机一滴酒");
			newExc.initCause(e);
			throw newExc;
		}
	}
}
